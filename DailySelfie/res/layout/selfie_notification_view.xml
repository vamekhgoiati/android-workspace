<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/selfie_notification_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="@string/selfie_notification_desc"/>
    
    <TextView 
        android:id="@+id/selfie_notification_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selfie_notification_text"
        android:layout_toRightOf="@id/selfie_notification_icon"/>

</RelativeLayout>
