<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->

	<servlet>
		<servlet-name>templateServlet</servlet-name>
		<servlet-class>com.vamekh.server.TemplateServiceImpl</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>institutionsServlet</servlet-name>
		<servlet-class>com.vamekh.server.InstitutionServiceImpl</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>typeServlet</servlet-name>
		<servlet-class>com.vamekh.server.InstitutionTypeServiceImpl</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>returnServlet</servlet-name>
		<servlet-class>com.vamekh.server.ReturnServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>templateServlet</servlet-name>
		<url-pattern>/project3/templateService</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>institutionsServlet</servlet-name>
		<url-pattern>/project3/institutionService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>typeServlet</servlet-name>
		<url-pattern>/project3/typeService</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>returnServlet</servlet-name>
		<url-pattern>/project3/returnService</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>project3.html</welcome-file>
	</welcome-file-list>

</web-app>